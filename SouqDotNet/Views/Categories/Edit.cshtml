@model SouqDotNet.Models.Entities.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2 class="display-4">Update Category</h2>
<br />
@using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(q => q.Id)
        @Html.TextBoxFor(q => q.Id, new { @class = "form-control", @readonly=true })
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Name)
        @Html.TextBoxFor(q => q.Name, new { @placeholder = "Enter Category Name", @class = "form-control" })
        @Html.ValidationMessageFor(q => q.Name, "", new { @class="text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Description)
        @Html.TextBoxFor(q => q.Description, new { @placeholder = "Enter description", @class = "form-control" })
        @Html.ValidationMessageFor(q=>q.Description,"",new { @class = "text-danger"})
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="submit" />
        @Html.ActionLink("Back", "Index", null, null, new { @class = "btn btn-warning" })
    </div>
}
