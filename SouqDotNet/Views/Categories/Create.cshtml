@model SouqDotNet.Models.Entities.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}
<h2 class="display-4>Create Category</h2>
<br />
@using (Html.BeginForm("Create", "Categories", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(q => q.Name)
        @Html.TextBoxFor(q => q.Name, new { @placeholder = "Enter Category Name", @class = "form-control" })
        @Html.ValidationMessageFor(q=>q.Name,"",new {@class="text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Description)
        @Html.TextBoxFor(q => q.Description, new { @placeholder = "Enter description", @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="submit" />
        @Html.ActionLink("Back", "Index", null, null, new { @class = "btn btn-warning" })
    </div>
}
