@model IEnumerable<SouqDotNet.Models.Entities.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}

<h2 class="display-4">Employees</h2>
<br />
<div class="row justify-content-between">
    @Html.ActionLink("Create New Employee", "Create", "Employees", new { @class = "btn btn-success" })
    @using (Html.BeginForm("Search", "Employees", FormMethod.Post))
    {
        <div class="form-group my-2 my-lg-0 form-inline col">
            @Html.TextBox("name", null, new { @placeholder = "Customer Name", @class = "form-control mr-sm-2", @type = "Search" })
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </div>
    }
</div>
<br />
<br />
<table class="table table-striped">
    <caption>List of Employees</caption>
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(q => q.Id)</th>
            <th>@Html.DisplayNameFor(q => q.Name)</th>
            <th>@Html.DisplayNameFor(q => q.Salary)</th>
            <th>@Html.DisplayNameFor(q => q.Job)</th>
            <th>@Html.DisplayNameFor(q => q.Department.Name)</th>
            <th>Settings</th>
        </tr>
    </thead>
    @foreach (var Employee in Model)
    {
        <tr>
            <td>@Employee.Id</td>
            <td>@Employee.Name</td>
            <td>@Employee.Salary</td>
            <td>@Employee.Job</td>
            <td>@Employee.Department.Name</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = Employee.Id }, new { @class = "btn btn-outline-danger border-0" })
                @Html.ActionLink("Edit", "Edit", new { id = Employee.Id }, new { @class = "btn btn-outline-success border-0" })
                @Html.ActionLink("Details", "Details", new { id = Employee.Id }, new { @class = "btn btn-outline-info border-0" })
            </td>
        </tr>
    }
</table>
